/* components/calendar/calendar.wxss */

.calendar {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
}

.calendar-title {
  padding: 0 20rpx;
  text-align: left;
}

.calendar-title .ctrl {
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.calendar-title .item {
  display: inline-block;
  line-height: 50rpx;
  vertical-align: middle;
}

.calendar-title .title {
  min-width: 300rpx;
  text-align: center;
}

.calendar-title .today {
  float: right;
}

.calendar-week {
  display: flex;
  padding: 20rpx 10rpx;
  justify-content: space-around;
  border-top: 1px solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
  background: #f5f5f5;
}

.calendar-container {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
}

.calendar-container .grid {
  width: 14.2%;
  line-height: 70rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}
.calendar-container .grid.gray{
  color: #cccccc;
}
.select{
  background-color: rgb(49,120,228);
  border-radius: 10rpx;
  color: #ffffff;
}