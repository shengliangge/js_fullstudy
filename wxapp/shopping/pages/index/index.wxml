<view class="main">
	<swiper
	 class="swiper"
	 indicator-dots="{{indicatorDots}}"
	 indicator-color="{{indicatorColor}}"
	 autoplay="{{autoplay}}"
	 interval="{{interval}}"
	 duration="{{duration}}"
	 circular="{{circular}}"
	>
		<block wx:for="{{imgUrls}}" wx:key="index">
			<swiper-item class item-id>
				<image class="slide-image" src="{{item}}" />
			</swiper-item>
		</block>
	</swiper>
	<view class="selected">
		<view class="select-title">
			<text class>精选主题</text>
		</view>
		<view class="select-top">
			<view class="select-top__small">
				<navigator url="../detail/detail">
					<image class src="../../image/s1.png" />
				</navigator>
			</view>
			<view class="select-top__small">
				<navigator url="../detail/detail">
					<image class src="../../image/s2.png" />
				</navigator>
			</view>
		</view>
		<view class="select-bottom">
			<navigator url="../detail/detail">
				<image class src="../../image/s3.png" />
			</navigator>
		</view>
	</view>
	<view class="newest">
		<view class="newest-title">
			<text>最近新品</text>
		</view>
		<!-- 装最近新品 -->
		<view class="newest-box">
			<view class="newest-list">
				<navigator class url>
					<image src="../../image/s4.png" />
					<view class="newest-name">
						<text>瓜子</text>
					</view>
					<view class="newest-price">
						<text>￥3.98</text>
					</view>
				</navigator>
			</view>
			<view class="newest-list">
				<navigator class url>
					<image src="../../image/s5.png" />
					<view class="newest-name">
						<text>芹菜 半斤</text>
					</view>
					<view class="newest-price">
						<text>￥2.98</text>
					</view>
				</navigator>
			</view>
			<view class="newest-list">
				<navigator class url>
					<image src="../../image/s6.png" />
					<view class="newest-name">
						<text>素米 365g</text>
					</view>
					<view class="newest-price">
						<text>￥3.98</text>
					</view>
				</navigator>
			</view>
			<view class="newest-list">
				<navigator class url>
					<image src="../../image/s5.png" />
					<view class="newest-name">
						<text>芹菜 半斤</text>
					</view>
					<view class="newest-price">
						<text>￥2.98</text>
					</view>
				</navigator>
			</view>

		</view>
	</view>
</view>

