.category-scroll {
  width: 20%;
  height: 100vh;
  text-align: center;
}

.category-scroll-cate {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #ebebeb;
  background: #fafafa;
}

.detail-content{
  width: 77%;
  height: 100vh;
  position: absolute;
  right: 0px;
  top: 0px;
  margin: 0 20rpx 0 0rpx;
  box-sizing: border-box;
  border-left: 1px solid rgb(216,216,216);
  /* padding-left: 20rpx; */
}
.detail-content__page{
  height: 100vh;
}
.page-image{
  width: 100%;
  height: 250rpx;
  margin: 35rpx;

}
.page-title{
  text-align: center;
  color: #ab956d;
  padding-bottom:10rpx;
}
.page-detail{
  height: 200rpx;
  width: 30%;
  float: left;
  margin: 20rpx 0 0 10rpx ;
  text-align: center;
}
.page-detail text{
  margin-top: 30rpx;
}
.detail-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}