.new-item {
  width: 80%;
  margin: 40rpx auto;
  border-radius: 38rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0px 7px 20px #ececec;
}

.new-item image {
  width: 124rpx;
  height: 124rpx;
}
.right-conner{
  display: flex;
  flex-direction: column;
  justify-content: space-between ;
  align-items:flex-end;
}
.item-name,.icon-arrow{
  margin-right: 18rpx;
}
.new-item:hover{
  box-shadow: none;
}